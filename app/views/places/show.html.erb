<div class="container">



  <h1><%= @place["name"] %></h1>


  <h2>My Entries</h2>
  <% for entry in @entries %>


    <div class="card mb-3">
      <div class="card-body">
        <h3 class="card-title"><%= entry["title"] %></h3>
        <h4 class="card-subtitle mb-2 text-muted"><%= entry["occurred_on"] %></h4>
        <p class="card-text"><%= entry["description"] %></p>
        <p class="card-text"><%= entry["user_id"] %></p>
      </div>
    </div>
    
  <% end %>

  <p>
    <% if session["user_id"] %>
      <a href="/entries/new?place_id=<%= @place["id"] %>" class="btn btn-secondary">New Entry</a>
    <% end %>
  </p>

  <p>
    <a href="/places" class="btn btn-secondary">Back to All Places</a>
  </p>
</div>
